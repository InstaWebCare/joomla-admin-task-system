<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="title" type="text" label="COM_ADMINTASK_FORM_LBL_TASK_TITLE" description="COM_ADMINTASK_FORM_DESC_TASK_TITLE" hint="COM_ADMINTASK_FORM_LBL_TASK_TITLE"/>
    <field name="description" type="textarea" label="COM_ADMINTASK_FORM_LBL_TASK_DESCRIPTION" description="COM_ADMINTASK_FORM_DESC_TASK_DESCRIPTION" hint="COM_ADMINTASK_FORM_LBL_TASK_DESCRIPTION"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="assigned_to" type="text" label="COM_ADMINTASK_FORM_LBL_TASK_ASSIGNED_TO" description="COM_ADMINTASK_FORM_DESC_TASK_ASSIGNED_TO" hint="COM_ADMINTASK_FORM_LBL_TASK_ASSIGNED_TO"/>
    <field name="assignee" type="text" label="COM_ADMINTASK_FORM_LBL_TASK_ASSIGNEE" description="COM_ADMINTASK_FORM_DESC_TASK_ASSIGNEE" hint="COM_ADMINTASK_FORM_LBL_TASK_ASSIGNEE"/>
    <field name="ordering"/>
    <field name="category" type="text" label="COM_ADMINTASK_FORM_LBL_TASK_CATEGORY" description="COM_ADMINTASK_FORM_DESC_TASK_CATEGORY" hint="COM_ADMINTASK_FORM_LBL_TASK_CATEGORY"/>
    <field name="created_by" default="0" label="COM_ADMINTASK_FORM_LBL_TASK_CREATED_BY" description="COM_ADMINTASK_FORM_DESC_TASK_CREATED_BY" hidden="true" hint="COM_ADMINTASK_FORM_LBL_TASK_CREATED_BY"/>
    <field name="due_date" type="calendar" class="inputbox" label="COM_ADMINTASK_FORM_LBL_TASK_DUE_DATE" description="COM_ADMINTASK_FORM_DESC_TASK_DUE_DATE" hint="COM_ADMINTASK_FORM_LBL_TASK_DUE_DATE"/>
    <field name="priority" type="text" label="COM_ADMINTASK_FORM_LBL_TASK_PRIORITY" description="COM_ADMINTASK_FORM_DESC_TASK_PRIORITY" hidden="true" hint="COM_ADMINTASK_FORM_LBL_TASK_PRIORITY"/>
    <field name="comments_thread" type="editor" label="COM_ADMINTASK_FORM_LBL_TASK_COMMENTS_THREAD" description="COM_ADMINTASK_FORM_DESC_TASK_COMMENTS_THREAD" hint="COM_ADMINTASK_FORM_LBL_TASK_COMMENTS_THREAD"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
  <fieldset name="accesscontrol">
    <field name="asset_id" type="hidden" filter="unset"/>
    <field name="rules" type="rules" label="JFIELD_RULES_LABEL" translate_label="false" filter="rules" validate="rules" class="inputbox" component="com_admintask" section="task"/>
  </fieldset>
</form>
